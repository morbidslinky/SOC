<?xml version="1.0" encoding="utf-8"?>
<Scriptal xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <Name>Update_Table_Value</Name>
  <Description>Sets a value in a table at the specified key/index</Description>
  <EventFunctionTemplate>
|[1|TABLE]|[|[2|STRING,NUMBER]|] = |[3|STRING,NUMBER,BOOLEAN]|
  </EventFunctionTemplate>
  <Choices>
	<Choice>
	  <Name>Table</Name>
	  <Description>The table to be modified.</Description>
	  <AllowUIEdit>true</AllowUIEdit>
	  <AllowUserVariable>true</AllowUserVariable>
	</Choice>
	<Choice>
	  <Name>Key</Name>
	  <Description>The key (or index) of the value to be modified.)</Description>
	  <AllowUIEdit>true</AllowUIEdit>
	  <AllowLiteral>true</AllowLiteral>
	  <AllowUserVariable>true</AllowUserVariable>
	</Choice>
	<Choice>
	  <Name>Value</Name>
	  <Description>The new value for the key.</Description>
	  <AllowUIEdit>true</AllowUIEdit>
	  <AllowLiteral>true</AllowLiteral>
	  <AllowUserVariable>true</AllowUserVariable>
	</Choice>
  </Choices>
</Scriptal>